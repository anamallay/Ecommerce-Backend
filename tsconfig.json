{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDirs": ["src","api"],
    "outDir": "dist",
    "types": ["node", "express"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "api/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
